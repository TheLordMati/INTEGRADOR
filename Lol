import java.util.ArrayList;import java.util.List; public class Cliente { private String nombres; private String apellidos; private String sexo; private Date fechaNacimiento; private Date fechaIngreso; private List<Rutina> rutinas; //ya que rutina de entrenamiento est√° compuesta por varios ejercicios private int evaluacionTutor; public Cliente(String nombres, String apellidos, String sexo, Date fechaNacimiento, Date fechaIngreso) { this.nombres = nombres; this.apellidos = apellidos; this.sexo = sexo; this.fechaNacimiento = fechaNacimiento; this.fechaIngreso = fechaIngreso; this.rutinas = new ArrayList<Rutina>(); } public String getNombres() { return nombres; } public String getApellidos() { return apellidos; } public String getSexo() { return sexo; } public Date getFechaNacimiento() { return fechaNacimiento; } public Date getFechaIngreso() { return fechaIngreso; } public List<Rutina> getRutinas() { return rutinas; } public int getEvaluacionTutor() { return evaluacionTutor; } public void agregarRutina(Rutina rutina) { rutinas.add(rutina); } public float obtenerVolumenSemanalPorGrupoMuscular(GrupoMuscular grupo) { float volumenSemanal = 0.0f; for (Rutina rutina : rutinas) { volumenSemanal += rutina.obtenerVolumenSemanal(grupo, this); } return volumenSemanal; }} public class Rutina { private Date fechaInicio; private int duracionSemanas; private List<Ejercicio> ejercicios; private Tutor tutorAsignado; //incluir dentro de la clase, se puede acceder a la info del tutor directamente private int semanaInicio; private int evaluacionTutor; public Rutina(Date fechaInicio, int duracionSemanas, int semanaInicio, Tutor tutorAsignado) { this.fechaInicio = fechaInicio; this.duracionSemanas = duracionSemanas; this.semanaInicio = semanaInicio; this.ejercicios = new ArrayList<Ejercicio>(); this.tutorAsignado = tutorAsignado; } public Date getFechaInicio() { return fechaInicio; } public int getDuracionSemanas() { return duracionSemanas; } public List<Ejercicio> getEjercicios() { return ejercicios; } public Tutor getTutorAsignado() { return tutorAsignado; } public int getSemanaInicio() { return semanaInicio; } public int getEvaluacionTutor() { return evaluacionTutor; } public void agregarEjercicio(Ejercicio ejercicio) { ejercicios.add(ejercicio); } public float obtenerVolumenSemanal(GrupoMuscular grupo, Cliente cliente) { float volumenSemanal = 0.0f; for (Ejercicio ejercicio : ejercicios) { if (ejercicio.getGrupoMuscular().equals(grupo)) { volumenSemanal += ejercicio.calcularVolumenSemanal(cliente); } } return volumenSemanal; }} public class Ejercicio { private String nombre; private GrupoMuscular grupoMuscular; private int repeticiones; private int series; public Ejercicio(String nombre, GrupoMuscular grupoMuscular, int repeticiones, int series) { this.nombre = nombre; this.grupoMuscular = grupoMuscular; this.repeticiones = repeticiones; this.series = series; }
